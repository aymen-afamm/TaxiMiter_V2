<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/meter_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“Š RÃ‰SUMÃ‰ DE LA COURSE"
        android:textColor="@color/taxi_yellow"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Distance -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Distance parcourue:"
            android:textColor="@color/light_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvSummaryDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.5 km"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Duration -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DurÃ©e du trajet:"
            android:textColor="@color/light_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvSummaryDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 min"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/taxi_yellow"
        android:layout_marginVertical="16dp" />

    <!-- Total Fare -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TOTAL Ã€ PAYER:"
            android:textColor="@color/taxi_yellow"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSummaryFare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35.50 DH"
            android:textColor="@color/green"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Share Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnShareReceipt"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="PARTAGER LE REÃ‡U"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:backgroundTint="@color/taxi_yellow"
        app:cornerRadius="28dp"
        app:icon="@drawable/ic_share"
        app:iconTint="@color/black" />

</LinearLayout>