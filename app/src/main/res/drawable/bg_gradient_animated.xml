<?xml version="1.0" encoding="utf-8"?>
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">

    <item android:duration="3000">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#000000"
                android:centerColor="#1A1A1A"
                android:endColor="#FFD700"
                android:type="linear" />
        </shape>
    </item>

    <item android:duration="3000">
        <shape>
            <gradient
                android:angle="135"
                android:startColor="#FFD700"
                android:centerColor="#1A1A1A"
                android:endColor="#000000"
                android:type="linear" />
        </shape>
    </item>

    <item android:duration="3000">
        <shape>
            <gradient
                android:angle="225"
                android:startColor="#000000"
                android:centerColor="#FFD700"
                android:endColor="#1A1A1A"
                android:type="linear" />
        </shape>
    </item>
</animation-list>
